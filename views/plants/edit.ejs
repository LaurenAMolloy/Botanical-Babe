<%- include('../partials/head') %>
    <%- include('../partials/nav') %>

        <body>
            <main>
                <div class="form-wrapper">
                    <h1>Edit Plant</h1>

                    <form class="plant-form" action="/plants/<%= plant._id %>?_method=PUT" method="POST">

                        <div class="field">
                            <label for="name">Name</label>
                            <input type="text" placeholder="Enter plant name" id="name" name="name"
                                value="<%= plant.name %>">
                        </div>

                        <div class="field">
                            <label for="price">Price</label>
                            <input type="number" placeholder="Enter a price" id="price" name="price"
                                value="<%= plant.price %>">
                        </div>

                        <div class="field">
                            <label for="category">Category</label>
                            <select id="category" name="category">
                                <% for (let category of categories) { %>
                                    <option value="<%= category %>" <%=plant.category===category ? 'selected' : '' %>>
                                        <%= category %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>

                        <div class="field">
                            <label for="water">Water</label>
                            <input type="text" placeholder="e.g. every 2â€“3 weeks" id="water" name="water"
                                value="<%= plant.water %>">
                        </div>

                        <div class="form-actions">
                            <button class="btn btn-primary">Save Changes</button>
                            <a class="btn btn-secondary" href="/plants/<%= plant._id %>">Cancel</a>
                        </div>
                    </form>
                </div>

            </main>
        </body>

        </html>